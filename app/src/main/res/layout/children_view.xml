<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/children_list_shape"
    android:padding="16dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/children_name_list_card_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:elevation="12dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/children_name_list_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/select_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/moon_bold_font"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/children_name_list_card_view"
        app:layout_constraintStart_toEndOf="@+id/children_name_list_card_view"
        app:layout_constraintTop_toTopOf="@+id/children_name_list_card_view" />
</androidx.constraintlayout.widget.ConstraintLayout>